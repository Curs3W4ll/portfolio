{
  "name": "portfolio-corentin-hervaud",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "build:preview": "nuxt preview",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "generate:preview": "serve .output/public",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test:unit": "vitest run",
    "test:unit:dev": "vitest --ui",
    "test:e2e": "start-server-and-test 'NITRO_PORT=4173 nuxt preview' http://localhost:4173 'cypress run --e2e'",
    "test:e2e:record": "start-server-and-test 'NITRO_PORT=4173 nuxt preview' http://localhost:4173 'cypress run --e2e --record'",
    "test:e2e:dev": "start-server-and-test dev http://localhost:4173 'cypress open --e2e' --browser chrome",
    "postinstall": "nuxt prepare",
    "prepare": "husky"
  },
  "dependencies": {
    "@pinia/nuxt": "^0.7.0",
    "@sentry/nuxt": "^8.40.0",
    "nuxt": "^3.12.4",
    "vue": "^3.5.13",
    "vue-router": "^4.3.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@nuxt/eslint": "^0.7.0",
    "@nuxt/test-utils": "^3.14.4",
    "@types/eslint__eslintrc": "^2.1.1",
    "@vitest/ui": "^2.1.5",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "cypress": "^13.10.0",
    "eslint-plugin-cypress": "^3.2.0",
    "happy-dom": "^15.11.6",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "prettier-plugin-organize-imports": "^3.2.4",
    "serve": "^14.2.4",
    "start-server-and-test": "^2.0.3",
    "typescript": "5.6.2",
    "vite-plugin-eslint2": "^4.4.0",
    "vitest": "^2.1.5",
    "vue-tsc": "^2.1.10"
  },
  "lint-staged": {
    "*": [
      "npm run format"
    ],
    "**/*.{js,cjs,mjs,ts,cts,mts,vue}": [
      "npm run lint:fix"
    ]
  }
}
