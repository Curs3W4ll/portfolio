{
  "$schema": "https://json.schemastore.org/prettierrc",
  "plugins": ["prettier-plugin-organize-imports", "prettier-plugin-tailwindcss", "prettier-plugin-organize-attributes"],
  "semi": true,
  "tabWidth": 2,
  "singleQuote": false,
  "printWidth": 120,
  "trailingComma": "all",
  "attributeGroups": [
    "^[:]?is$",
    "^v-for$",
    "^v-if$",
    "^v-else-if$",
    "^v-else$",
    "^v-show$",
    "^v-cloak$",
    "^v-pre$",
    "^v-once$",
    "^v-editable$",
    "^[:]?id$",
    "^[:]?(ref|key)$",
    "^v-model",
    "^v-",
    "^[:]?class$",
    "^:",
    "$DEFAULT",
    "^aria-",
    "^@",
    "^data-test$"
  ]
}
